[Unit]
Description=farmconnect-ml
After=syslog.target network.target redis.service postgresql.service

[Service]
WorkingDirectory=/farmconnect

ExecStart=/farmconnect/venv/bin/python /farmconnect/ml/main.py
ExecStop=/bin/kill -15 $MAINPID
Environment="PYTHONPATH=/farmconnect"

RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
