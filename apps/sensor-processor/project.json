{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sensor-processor/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/sensor-processor",
        "main": "apps/sensor-processor/src/main.ts",
        "tsConfig": "apps/sensor-processor/tsconfig.app.json",
        "assets": ["apps/sensor-processor/src/assets"],
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/sensor-processor/src/environments/environment.ts",
              "with": "apps/sensor-processor/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "sensor-processor:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "sensor-processor:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/sensor-processor/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/sensor-processor"],
      "options": {
        "jestConfig": "apps/sensor-processor/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
