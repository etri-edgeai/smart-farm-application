{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach Nestjs Api app",
      "port": 9229
    },
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach Nestjs Sensor-collector app",
      "port": 9228
    },
    {
      "name": "Chrome - Edge-mon",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Python: Serving ML",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/apps/ml/main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "$PYTHONPATH:${workspaceFolder}/apps/ml:${workspaceFolder}/apps"
      }
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/devenv",
      "env": {
        "PYTHONPATH": "$PYTHONPATH:${workspaceFolder}/apps/ml_center:${workspaceFolder}/apps"
      }
    }
  ]
}
